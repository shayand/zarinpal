<config>
   <sections>
        <payment>
            <groups>
                <zarinpal translate="label comment" module="payment">
                    <label>زرین پال</label>
                    <comment>&lt;strong&gt;Please note&lt;/strong&gt;: All rights of this module belong to Shayan Davarzani &lt;a href="mailto:shayandavarzani@gmail.com" target="_blank"&gt;shayandavarzani@gmail.com&lt;/a&gt;</comment>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <order_status translate="label">
                            <label>New order status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_status>
                        <sort_order translate="label">                            
                            <label>Sort order</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sort_order>                        
                        <title translate="label">
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>        
                        <seller_id translate="label comment">
                            <label>Merchant ID</label>
                            <comment>like XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX</comment>
                            <frontend_type>text</frontend_type>
                            <backend_model>zarinpal/config_backend_sellerid</backend_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </seller_id>                        
                    </fields>
                </zarinpal>
            </groups>
        </payment>
    </sections>
</config>